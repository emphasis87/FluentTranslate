<Window x:Class="FluentTranslate.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluentTranslate.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal">
            <Label Content="Language" Margin="0,0,10,0" />
            <ComboBox Width="120">
                <ComboBoxItem Name="English" IsSelected="True">English</ComboBoxItem>
                <ComboBoxItem Name="Czech">Czech</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Label Content="{FluentTranslate 'hello'}"/>
    </StackPanel>
</Window>
